<svg xmlns="http://www.w3.org/2000/svg" width="{{ total_width }}" height="20" role="img" aria-label="{{ label }}: {{ status }}">
  <title>{{ label }}: {{ status }}</title>

  <!-- Gradient overlay like Shields.io (optional) -->
  <linearGradient id="s" x2="0" y2="100%">
    <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
    <stop offset="1" stop-opacity=".1"/>
  </linearGradient>

  <!-- Define clip path for rounded outer corners only -->
  <clipPath id="r">
    <rect width="{{ total_width }}" height="20" rx="3" fill="#fff"/>
  </clipPath>

  <!-- Group clipped to rounded corners -->
  <g clip-path="url(#r)">
    <!-- Left side (label) -->
    <rect width="{{ label_width }}" height="20" fill="#555"/>

    <!-- Right side (status) -->
    <rect x="{{ label_width }}" width="{{ status_width }}" height="20" fill="{{ color }}"/>

    <!-- Optional: gradient overlay -->
    <rect width="{{ total_width }}" height="20" fill="url(#s)"/>
  </g>

  <!-- Text -->
  <g fill="#fff" text-anchor="middle" dominant-baseline="middle" font-family="Segoe UI, Verdana, Geneva, DejaVu Sans, sans-serif" text-rendering="geometricPrecision" font-size="11">
    <text x="{{ label_width // 2 }}" y="50%">{{ label }}</text>
    <text x="{{ label_width + (status_width // 2) }}" y="50%">{{ status }}</text>
  </g>
</svg>
